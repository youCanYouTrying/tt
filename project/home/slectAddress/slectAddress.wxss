::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent
}
page{
  background-color: #fff;
}

.container1{
  width: 100%;
  height:aotu;
  color: #333;
 }
.header,.body1,.cont-head{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  padding: 24rpx 22rpx 23rpx 32rpx;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5
}
.header{
  height: 112rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  background-color:#fff; 
  align-items: center
}
.header-left{
  width: 160rpx;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  position: relative;
  box-sizing: border-box;
  padding-left: 28rpx;
}
.his-img{
  position: absolute;
  width: 19rpx;
  height: 25rpx;
  top: 0;
  left: 0
}
.header-right{
  flex: 1;
  position: relative
}
.right-img{
  height:22rpx;
  width:22rpx;
  display: inline-block;
  margin-right: 12rpx;
}
.input-img{
  position:absolute;
  top:calc(50% - 13rpx);
  left:20rpx;
  width:25rpx;
  height:26rpx;
  background-size: 100%
}
.del-img{
  position: absolute;
  right: 20rpx;
  top: 0;
  width: 25rpx;
  height: 25rpx;
  z-index: 5
}
.del-img>image{
  width: 100%;
  height: 100%
}
.head-img{
  width: 20rpx;
  height: 22rpx;
  display: inline-block;
  position: absolute;
  top:23rpx;
  left: 25rpx;
}
.his-img>image,.right-img>image,.input-img>image,.head-img>image{
  width: 100%;
  height: 100%;
}
.detailAddList{
  margin-top: 113rpx;
  padding-left: 28rpx;
  padding-right: 22rpx;
  height: 90rpx;
}
.detail-head{
  display: flex;
  align-items: center;
}
.detail-box{
  padding: 10rpx 0;
  border-bottom: 1rpx solid #e6e6e6
}
.detail-left{
  flex: 2;
  text-align: left;
  font-size: 30rpx;
}
.detail-right{
  font-size: 24rpx;
  color: #666;
}
.detail-content{
  width: 100%;
  font-size: 23rpx;
  color: #666;
  line-height: 1;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

input{
	/* height: 40rpx; */
	background-color: #eee;
	border-radius: 4rpx;
	border: solid 1rpx #e6e6e6;
  font-size: 30rpx ;
  padding-left: 54rpx; 
  text-align: left;
  /* line-height: 40rpx; */
  height:70rpx;
line-height:70rpx;

}
.body1{
  margin-top: 113rpx;
  display: flex
}
.body1-left{
  flex: 2;
  text-align: left;
  font-size: 30rpx;
  padding-left: 5rpx
}
.body1-right{
  flex: 2;
  font-size: 24rpx;
  color: #ff3d4c;
  text-align: right
}
.cont-head{
  color: #666;
  font-size: 28rpx;
  border: none;
  position: relative;
  padding-left: 56rpx;
}
.cont-hislist{
  padding: 30rpx 22rpx 24rpx 56rpx;
}
.add-lookmore{
  padding: 15rpx 22rpx 15rpx 56rpx;
  font-size: 24rpx;
}
.add-lookmore>view{
  display:inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
}
.add-lookmore>image{
  width:20rpx;
  height:8rpx;
  display:inline-block;
  vertical-align: middle;
}
.addr{
  width: 100%;
  overflow: hidden;
  font-size: 30rpx;
  text-overflow: ellipsis;
  white-space: nowrap
}
.people{
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #666;
}
.people>text:first-child{
  display: inline-block;
  width: 140rpx;
}


/*城市选择*/
.container-inner {
  display: flex;
  flex-direction: row-reverse;
  margin-top: 100rpx;
}
.container {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  padding: 10rpx 10rpx 10rpx 0;
}

.searchLetter {
  flex-shrink: 0;
  width: 80rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  color: #666;
}
.searchLetter view {
  margin-top: 20rpx;
}

.touchClass {
  background-color: #fff;
  color: #fff;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
}

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
}

.selectCity {
  padding: 16rpx 0;
  background-color: #f5f5f5;
  margin-bottom: -10rpx;
}

.item_letter {
  display: flex;
  background-color: #f5f5f5;
  height: 60rpx;
  padding-left: 34rpx;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.item_city{
  display: flex;
  background-color: #fff;
  height: 86rpx;
  padding-left: 34rpx;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
  font-size: 24rpx;
  color: #666;
}
.selection>.item_city:last-child{
  border: none;
}

.hotcity-common {
  font-size: 28rpx;
  height: 60rpx;
  color: #666;
  padding-bottom: 0;
  padding-left:34rpx;
}

.hotCity {
  padding-right: 50rpx;
  margin: auto;
}
.thisCityNameBox{
  background-color:#fff; 
  height: 100rpx
}
.thisCityName {
  background-color: #f5f5f5;
	border-radius: 4rpx;
	border: solid 1rpx #e6e6e6;
  display: inline-block;
  padding: 15rpx 46rpx;
  font-size: 24rpx;
  text-align: center;
  margin: 16rpx 0 16rpx 36rpx;
}

.thishotText {
  color: #f6636d;
  font-size: 20rpx;
  margin: 0 !important;
}

.slectCity {
  border-color: #8BC34A !important;
}

.slectCity view {
  color: #8BC34A !important;
}

.weui-grid {
  padding: 10rpx 0;
  width: 200rpx;
  box-sizing: border-box;
  border: 1rpx solid #ececec;
  border-radius: 8rpx;
  background-color: white;
  margin: 8rpx 0;
}

.weui-grids {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.weui-grid__label {
  display: block;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.ul {
  display: block;
  color: grey;
  margin-left: 20rpx;
}

.li {
  display: block;
  font-weight: 100;
  font-size: 28rpx;
  padding: 16rpx 0;
}

.county {
  display: flex;
  flex-wrap: wrap;
}
