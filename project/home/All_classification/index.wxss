/* home/All_classification/index.wxss */

.classifi {
  width: 100%;
  height: 100%;
}

.classifi .search {
  width: 100%;
  background: #fff;
  position: fixed;
  padding: 25rpx 35rpx;
  box-sizing: border-box;
  z-index: 10;
  top: 0
}

.classifi .search .search_img {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 50rpx;
  z-index: 9;
}

.classifi .search .search_img image {
  width: 100%;
  height: 100%;
}

.classifi .search input {
  width: 100%;
  height: 65rpx;
  background: #f7f7f7;
  border: 1px solid #e6e6e6;
  padding-left: 70rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}

/*分类内容部分*/

.classifi_con {
  display: -webkit-flex;
  height: 100%;
  padding-top: 55px;
}

/*左边部分*/

.classifi_con .classify-container {
  width: 170rpx;
  height: 100%;
  background: #fff;
  margin-right: 20rpx;
}

.classifi_con .classify-container .classify {
  width: 100%;
  height: 45px;
  line-height: 45px;
  box-sizing: border-box;
  text-align: center;
  background: #fff;
  font-size: 30rpx;
}

.classifi_con .classify-container .active {
  background: #f5f5f5;
}

.classifi_con .classify-container .active .cla_name {
  font-weight: bold;
}

.classifi_con .classify-container .classify .cla_name {
  color: #333;
}

/*右边部分*/

.classifi_con .goods-container {
  -webkit-flex: 1;
  height: 100%;
}

.meifood {
  width: 100%;
}

.meifood .food_title {
  width: 100%;
  height: 45px;
  line-height: 45px;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.meifood .food_title .food_font {
  font-size: 35rpx;
  color: #333;
  display: inline-block;
}

.meifood .food_title .food_span {
  font-size: 25rpx;
  color: #999;
  display: inline-block;
  margin-left: 15rpx;
}

.meifood .food_items {
  width: 100%;
  background: #fff;
  padding-top: 25px;
  box-sizing: border-box;
}

.meifood .food_items .food_item {
  display: inline-block;
  width: calc(100% / 3);
  text-align: center;
  margin-bottom: 25px;
}

.meifood .food_items .food_item .foodimg {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
}

.meifood .food_items .food_item .foodimg image {
  width: 100%;
  height: 100%;
}

.meifood .food_items .food_item .food_name {
  font-size: 30rpx;
  text-align: center;
}

.meifood .food_items .food_item .foodspan {
  display: inline-block;
  margin: auto;
  font-size: 25rpx;
  padding: 5rpx 20rpx;
  box-sizing: border-box;
  background: #e6e6e6;
  color: #999;
  border-radius: 50px;
  margin-top: 10rpx;
}
