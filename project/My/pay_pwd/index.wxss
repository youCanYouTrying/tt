page{
  border-top: 2rpx solid #e6e6e6;
}
.updata{
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding: 80rpx 20rpx 40rpx 20rpx;
  box-sizing: border-box;
}
.updata form{
  width: 100%;
}
.updata form .updata_new{
  background-color: #fff;
  width: 100%;
  height: 100rpx;
  padding-left: 20rpx;
}
.updata form .updata_new .new_pwd{
  float: left;
  line-height: 100rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  width: 128rpx;
}
.updata form .updata_new .input{
  font-size: 28rpx;
  height: 100rpx;
}
.updata form .updata_red{
  width: 100%;
  height: 100rpx;
}
.updata form .updata_red .new_pwd{
  float: left;
  line-height: 100rpx;
  margin-right: 20rpx;
  font-size: 32rpx;
}
.updata form .updata_red .input{
  font-size: 28rpx;
  height: 100rpx;
}
/*获取验证码*/
.updata form .Code{
  width: 100%;
  height: 100rpx;
  position: relative;
  background-color: #fff;
  margin-top: 20rpx;
  padding-left: 20rpx;
}
.updata form .Code .code_url{
  display: inline-block;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 20rpx;
  font-size: 24rpx;
  border: 2rpx solid #ddd;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  color: #999;
}
.updata form .Code .input{
  width: 65%;
  height: 100rpx;
font-size: 28rpx;
}

button::after{
    border:none;
}
.updata form  .submit{
  border-radius: 0px;
  margin-top: 60rpx;
  height: 90rpx;
  font-size: 32rpx;
  background-color:rgb(253,187,191);
  color: #fff;
}
.updata .weui-toptips{
  width: 100%;
  height: 80rpx;
  text-align: center;
  background: #f5f5f5;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #ff6363;
}
.code_mg{
  padding-left: 148rpx;
}
.code_text{
  position: absolute;
  top: 30rpx;
  color: #333;
  font-size: 28rpx;
}