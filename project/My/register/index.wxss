page{
  width: 100%;
  height: 100%;
  background: white;
  border-top: 2rpx solid #f5f5f5;
  overflow: hidden;
}
.modify_pwd{
  width: 100%;
  padding: 40rpx 20rpx 40rpx 20rpx;
  box-sizing: border-box;
  height: 100%;
  overflow: hidden;
}
.modify_pwd .form_pwd{
  width: 100%;
}
.modify_pwd .form_pwd .phone{
  width: 100%;
  height: 90rpx;
  border-bottom: 2rpx solid #dbdbdb;
  position:relative;
}
.modify_pwd .form_pwd .phone .input_phone{
  width: 100%;
  display: inline-block;
  height: 90rpx;
  font-size: 28rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.modify_pwd .form_pwd .pwd{
  width: 100%;
  height: 90rpx;
  border-bottom: 2rpx solid #dbdbdb;
  position: relative;
  margin-top: 40rpx;
} 
.modify_pwd .form_pwd .pwd .input_pwd{
  width: 60%;
  display: inline-block;
  height: 90rpx;
  font-size: 28rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.modify_pwd .form_pwd .pwd .yanz{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  display: inline-block;
  right: 10rpx;
  font-size: 28rpx;
  color: #1a92ee;
}
.modify_pwd .form_pwd .newpwd{
  width: 100%;
  height: 90rpx;
  border-bottom: 2rpx solid #dbdbdb;
  margin-top: 30rpx;
  position: relative;
}
.modify_pwd .form_pwd .newpwd .new_pwd{
  width: 100%;
  display: inline-block;
  height: 90rpx;
  font-size: 28rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.modify_pwd .form_pwd  .submit{
  width: 100%;
  height: 80rpx;
  position: relative;
  margin-top: 110rpx;
}
.modify_pwd .form_pwd  .submit .submits{
    display: inline-block;
    width: 100%;
    height: 90rpx;
    background: #e6e6e6;
    text-align: center;
    line-height: 90rpx;
    color: #b3b3b3;
     border-radius: 0;
     border: 0;
     font-size: 30rpx;
}
button::after{
    border:none;
}
.modify_pwd .weui-toptips{
  width: 100%;
  height: 80rpx;
  text-align: center;
  background: #f5f5f5;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fd6767;
}
.user_rule{
  font-size: 28rpx;
}
.user_rule radio{
  margin-left: 20rpx;
  margin-top: 10rpx;
}
radio .wx-radio-input{
   border-radius: 0%;/* 圆角 */
   width: 20rpx;
   height: 20rpx;
}
.hezai_rule{
  display: inline-block;
  color: #fd6767;
}
.newpwd .image{
  display: block;
  width: 40rpx;
  height: 24rpx;
  position: absolute;
  top:40rpx;
  right: 20rpx;
  z-index: 10;
}
.newpwd .image image{
  display: block;
  width: 40rpx;
  height: 24rpx;
}
.phone image{
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  z-index: 10;
}