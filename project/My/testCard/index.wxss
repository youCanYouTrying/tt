.test_title{
  background-color: white;
  border-top: 2rpx solid#eee;
  padding-left: 40rpx;
  font-size: 28rpx;
}
.head{
  height: 60rpx;
  line-height: 60rpx;
}
.card_name{
  padding: 40rpx 0;
}
.head text{
  margin-left:20rpx;
}
.head text:last-child{
  padding-left: 40rpx;
}
.notice{
  padding-left: 40rpx;
  font-size: 32rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #999;

}
.input_group{
  background-color: #ffffff;
  border-top:2rpx solid#ddd;
}
.list1{
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid#ddd;
}
.user{
  float: left;
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}
.input{
  float: left;
  width: 70%;
  height: 100rpx;
}
.input input{
  width: 100%;
  height: 100rpx;
  display: inline-block;
  vertical-align: middle;
  font-size: 32rpx;
  padding-left: 40rpx;
}
.user_rule{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  padding-left: 60rpx;
  color: #999;
}
.user_rule navigator{
  display: inline-block;
  color: blue;
}
.next_btn{
  width: 100%;
  margin-top: 20rpx;
}
.next_btn button{
  width: 95%;
  margin: auto;
  color: white;
  background-color: #ccc;
}

.next_btn button::after{border:0}