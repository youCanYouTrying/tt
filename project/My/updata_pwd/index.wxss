page{
  border-top: 1px solid #e6e6e6;
}
.updata{
  width: 100%;
  height: 100%;
  background: white;
  overflow: hidden;
  padding: 40px 10px 20px 10px;
  box-sizing: border-box;
}
.updata form{
  width: 100%;
}
.updata form .updata_new{
  width: 100%;
  height: 50px;
}
.updata form .updata_new .new_pwd{
  float: left;
  line-height: 50px;
  margin-right: 10px;
  font-size: 16px;
  width: 64px;
}
.updata form .updata_new .input{
  font-size: 14px;
  height: 50px;
}
.updata form .updata_red{
  width: 100%;
  height: 50px;
}
.updata form .updata_red .new_pwd{
  float: left;
  line-height: 50px;
  margin-right: 10px;
  font-size: 16px;
}
.updata form .updata_red .input{
  font-size: 14px;
  height: 50px;
}
/*获取验证码*/
.updata form .Code{
  width: 100%;
  height: 50px;
  position: relative;
}
.updata form .Code .code_url{
  display: inline-block;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 10px;
  font-size: 12px;
  border: 1px solid #ff7171;
  padding: 5px 10px;
  box-sizing: border-box;
  color: #ff7171;
}
.updata form .Code .input{
  width: 65%;
  height: 50px;
font-size: 14px;
}

button::after{
    border:none;
}
.updata form  .submit{
  border: 1px solid #ff4d4d;
  border-radius: 0px;
  margin-top: 30px;
  height: 45px;
  font-size: 16px;
  color: #ff6363;
}
.updata .weui-toptips{
  width: 100%;
  height: 40px;
  text-align: center;
  background: #f5f5f5;
  line-height: 40px;
  font-size: 14px;
  color: #ff6363;
}