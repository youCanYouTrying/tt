/* My/Set_up/index.wxss */
.setup{
  width: 100%;
  height: 100%;
  overflow: hidden;

}
.setup .setup_con{
  width: 100%;
}
.setup .setup_con .set_items{
  width: 100%;
  background: white;
   padding-left: 10px;
  box-sizing: border-box;
  margin-top: 15px;
}
.setup .setup_con .set_items .set_item{
  width: 100%;
  height: 50px;
  border-bottom: 1px solid #ebebeb;
}
.setup .setup_con .set_items .set_item:last-of-type{
  border: none;
}
.setup .setup_con .set_items .set_item .itme{
  position: relative;
  width: 100%;
  line-height: 50px;
  height: 50px;
  font-size: 15px;
  color: #333;
}
.setup .setup_con .set_items .set_item .itme span{
  font-size: 12px;
  color: #999;
  margin-left: 3px;
}
.setup .setup_con .set_items .set_item .itme .item_img{
  width: 10px;
  height: 15px;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 10px;
}
.setup .setup_con .set_items .set_item .itme .item_img image{
  width: 10px;
  height: 15px;
  position: absolute;
  top: 0px;
  right: 0px;
}