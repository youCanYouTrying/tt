page{
  width: 100%;
  height: 100%;
  background: white;
  border-top: 1px solid #f5f5f5;
  overflow: hidden;
}
.modify_pwd{
  width: 100%;
  padding: 20px 10px 20px 10px;
  box-sizing: border-box;
  height: 100%;
  overflow: hidden;
}
.modify_pwd .form_pwd{
  width: 100%;
}
.modify_pwd .form_pwd .phone{
  width: 100%;
  height: 45px;
  border-bottom: 1px solid #dbdbdb;
}
.modify_pwd .form_pwd .phone .input_phone{
  width: 100%;
  display: inline-block;
  height: 45px;
  font-size: 14px;
  padding-left: 15px;
  box-sizing: border-box;
}
.modify_pwd .form_pwd .pwd{
  width: 100%;
  height: 45px;
  border-bottom: 1px solid #dbdbdb;
  position: relative;
  margin-top: 20px;
} 
.modify_pwd .form_pwd .pwd .input_pwd{
  width: 60%;
  display: inline-block;
  height: 45px;
  font-size: 14px;
  padding-left: 15px;
  box-sizing: border-box;
}
.modify_pwd .form_pwd .pwd .yanz{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  display: inline-block;
  right: 5px;
  font-size: 14px;
  color: #1a92ee;
}
.modify_pwd .form_pwd .newpwd{
  width: 100%;
  height: 45px;
  border-bottom: 1px solid #dbdbdb;
  margin-top: 15px;
}
.modify_pwd .form_pwd .newpwd .new_pwd{
  width: 100%;
  display: inline-block;
  height: 45px;
  font-size: 14px;
  padding-left: 15px;
  box-sizing: border-box;
}
.modify_pwd .form_pwd  .submit{
  width: 100%;
  height: 40px;
  position: relative;
  margin-top: 55px;
}
.modify_pwd .form_pwd  .submit .submits{
    display: inline-block;
    width: 100%;
    height: 45px;
    background: #ebebeb;
    text-align: center;
    line-height: 45px;
    color: #b3b3b3;
     border-radius: 0;
     border: 0;
     font-size: 15px;
}
button::after{
    border:none;
}
.modify_pwd .weui-toptips{
  width: 100%;
  height: 40px;
  text-align: center;
  background: #f5f5f5;
  line-height: 40px;
  font-size: 14px;
  color: #fd6767;
}