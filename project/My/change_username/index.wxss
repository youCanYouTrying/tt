/* My/change_username/index.wxss */
.container{
  border-top: 1px solid#ddd;
  background-color: #fff;
  width: 100%;
  height: 100%;
  padding-top: 10px;
  color: #333;
}
.center{
   width: 95%;
  margin: auto;
}
.notic{
  text-align: center;
  color: red;
  padding-bottom: 10px;
  font-size: 16px;
}
.input_box{
  position: relative;
  background-color:rgb(244,248,250);
  height: 50px;
  padding-left: 5px;
}
label,input{
  display: inline-block;
}
input{
  height: 30px;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 20%;
}
label{
  width: 20%;
  height: 50px;
  line-height: 50px;
}
.rule{
  margin-top: 10px;
  font-size: 27rpx;
  color: #999;
}
.btn button{
  margin-top: 20px;
  width: 100%;
  height: 40px;
  background-color: rgb(254,110,120);
  color: #fff;
  font-size: 16px;
}