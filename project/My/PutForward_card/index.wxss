.recharge_panel{
  background-color: #fff;
  padding: 20px 20px;
}
.card_box{
  width: 100%;
  border-top: 1rpx solid#ddd;
  border-bottom: 2rpx solid#ddd;
   height: 100rpx;
}
.card_box .box_left{
  display: inline-block;
  width: 20%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #999;
  text-align: center;
}
.card_box .box_right{
  display: inline-block;
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
  font-size: 32rpx;
  color: #999;

}
.card_box .card_name{
  margin-right: 40rpx;
  color: #333;
  font-size: 32rpx;
}
.card_name image{
  display: inline-block;
  vertical-align: middle;
  width: 18rpx;
  height: 28rpx;
}
.input_group{
  width: 100%;
  overflow: auto;
  margin-top: 26px;
}
.title{
  font-size: 14px;
  color: #999;
}
.icon{
  margin-top: 22px;
  width: 10%;
  float: left;
  font-size: 24px;
  text-align: center;
}
.number{
  width: 80%;
  float: left;
}
.number input{
  height: 60px;
  display: inline-block;
  font-size: 30px;
  caret-color: rgb(254,110,120);
}
.btn{
  width: 95%;
  margin: 30px auto;
}
.btn button{
  background-color: rgb(254,110,120);
  color: white;
}
.privarte_box{
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  border-top: 2rpx solid #ddd;
  font-size: 28rpx;
}
.privarte_box .box_left{
  height: 100rpx;
  line-height: 100rpx;
  width: 35%;
  text-align: center;
  display: inline-block;
  color: #999;
}
.privarte_box .box_right{
  height: 100rpx;
  line-height: 100rpx;
  width: 65%;
  display: inline-block;
  text-align: right;
}
.privarte_box .all_out{
  margin-right: 40rpx;
  color: rgb(254,110,120);
}
.mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color:#333;
  z-index:999;
  top:0;
  left:0;
  opacity:0.5;
}
.content{
  width:600rpx;
  position:fixed;
  background-color:#ffffff;
  z-index:999;
  top:20%;
  left:75rpx;
  padding-bottom: 20rpx;
  
}
.content .title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  border-bottom: 4rpx solid#fc656f;
}
.card_group{
  width: 100%;
  padding: 20rpx 0;
  overflow: auto;
}
.card_list{
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid#ddd;
}
.icon_bank{
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  float: left;
}
.icon_bank image{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx 40rpx;
  
}
.bank_name{
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  float: left;
  font-size: 28rpx;
}
.check{
  width: 20%;
  float: left;
  height: 80rpx;
}
.check image{
  display:block;
  margin: auto;
  margin-top: 30rpx;
  width: 30rpx;
  height: 22rpx;
}
.add_card{
  display: flex;
  width: 100%;
  vertical-align: center;
}
.add_icon{
  width: 20%;
}
.add_icon image{
  display: block;
  margin: auto;
  width: 40rpx;
  height: 40rpx;
}
.add_name{
  width: 80%;
  font-size: 28rpx;
}
.close{
  font-size: 36rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  color: #999;
}