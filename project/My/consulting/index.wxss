/* My/consulting/index.wxss */
.container{
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #f5f5f5;
}
.consulting{
  width: 100%;
  height: 100%;
}
.consulting .consult_con{
      width: 100%;
      height: 100%;
      overflow-x: hidden;
      overflow-y: auto;
      padding: 0px 10px;
      box-sizing: border-box;
}
.consulting .consult_con .consult_time{
  width: 100%;
  margin: 30px 0px 10px 0px;
  text-align: center;
  font-size: 12px;
  color: #666;
}
.consulting .consult_con .service{
    width: 100%;
    position: relative;
    margin-bottom: 20px;
}
.consulting .consult_con .service .service_img{
  width: 45px;
  height: 45px;
  position: absolute;
  top: 0px;
  left: 0px;
}
.consulting .consult_con .service .service_img image{
  width: 45px;
  height: 45px;
  position: absolute;
  top: 3px;
  left: 0px;
}
.consulting .consult_con .service .server_con{
  width: 100%;
  padding-left: 50px;
  padding-top: 10px;
  padding-right: 10px;
  box-sizing: border-box;
  position: relative;
}
.consulting .consult_con .service .server_con image{
  width: 30px;
  height: 30px;
  position: absolute;
  top: 10px;
  left: 40px;
  z-index: 1;
}
.consulting .consult_con .service .server_con .server_items{
  width: 100%;
  height: 100%;
  padding: 10px 10px 10px 10px;
  box-sizing: border-box;
  max-width: 220px;
  background: white;
  margin-left: 10px;
  position: relative;
  z-index: 2;
  box-shadow: 1px 1px 5px 1px #e6e6e6;
  border-radius: 3px;
}
.consulting .consult_con .service .server_con .server_items .server_item{
 font-size: 14px;
  margin: 5px 0px;
  color: #666;
}
.consulting .consult_con .service .server_con .server_items .server_item navigator{
  color: #029e5e;
}


/*用户*/
.consulting .consult_con .useservice{
    width: 100%;
    position: relative;
    margin-bottom: 20px;
}
.consulting .consult_con .useservice:last-of-type{
    width: 100%;
    position: relative;
    margin-bottom: 60px;
}
.consulting .consult_con .useservice .useserver_con image{
  width: 30px;
  height: 30px;
  position: absolute;
  top: 10px;
  right: 40px;
  z-index: 1;
}
.consulting .consult_con .useservice .useservice_img{
  width: 45px;
  height: 45px;
  position: absolute;
  top: 0px;
  right: 0px;
}
.consulting .consult_con .useservice .useservice_img image{
  width: 45px;
  height: 45px;
  position: absolute;
  top: 3px;
  left: 0px;
}
.consulting .consult_con .useservice .useserver_con{
  width: 100%;
  padding-right: 60px;
  padding-top: 10px;
  padding-left: 10px;
  box-sizing: border-box;
  text-align: right;
}
.consulting .consult_con .useservice .useserver_con .useserver_items{
  height: 100%;
  padding: 5px 10px 5px 10px;
  box-sizing: border-box;
  max-width: 220px;
  background: white;
  position: relative;
  z-index: 2;
  box-shadow: 1px 1px 5px 1px #e6e6e6;
  border-radius: 3px;
  display: inline-block;
  width: auto;
 
}
.consulting .consult_con .useservice .useserver_con .useserver_items .useserver_item{
  font-size: 14px;
  margin: 5px 0px;
  color: #666;
  display: inline-block;
  width: auto;
  max-width: 240px;
}


/*输入内容*/
.submit{
  width: 100%;
  height: 50px;
  border-top: 1px solid #e6e6e6;
  position: fixed;
  bottom: 0px;
  left: 0px;
  background: white;
  z-index: 999;
}
.submit .phone{
  width: 35px;
  height: 35px;
  position: absolute;
  top: 50%;
  left: 5px;
  transform: translateY(-50%);
}
.submit .phone image{
  width: 35px;
  height: 35px;
  position: absolute;
  top: 0px;
  left: 0px;
}
.submit form{
  width: 100%;
  display: inline-block;
  height: 50px;
  padding: 0px 65px 0px 45px;
  box-sizing: border-box;
}
.submit form .text{
  width: 100%;
  height: 100%;
  padding: 10px 0px;
  box-sizing: border-box;
}
.submit form .text .input{
  width: 100%;
  height: 30px;
  display: inline-block;
  border: 1px solid #ebebeb;
  padding-left: 7px;
  box-sizing: border-box;
  color: #666;
  font-size: 14px;
  max-height: 60px;
}
.submit form .sub_btn{
  display: inline-block;
  padding: 0px 13px;
  box-sizing: border-box;
  position: absolute;
  top: 50%;
  right: 5px;
  transform: translateY(-50%);
  font-size: 13px;
  height: 30px;
  line-height: 30px;
  border: 1px solid #d1d1d1;
  background: white;
  color: #d1d1d1;
}
button::after{
    border:none;
}