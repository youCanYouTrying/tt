.Recharge{
  margin-top: 30rpx;
  background-color: white;
  position: relative;
}
.method{
  width: 100%;
  height: 120rpx;
  background-color: white;
  overflow: auto;
}
.icon{
  margin-left: 40px;
  width: 40rpx;
  height: 40rpx;
  float: left;
  position: absolute;
  top: 60rpx;
  left: 0px;
  transform: translateY(-50%);
}
.icon image{
  width: 100%;
  height: 100%;
}
.method_name{
  height: 120rpx;
  line-height: 120rpx;
  margin-left: 140rpx;
  float:left;
}
.check{
  width: 80rpx;
  height: 80rpx;
  float: left;
  position: absolute;
  right: 0;
  top: 30rpx;
}
checkbox .wx-checkbox-input{
   border-radius: 50%;/* 圆角 */
   width: 40rpx; /* 背景的宽 */
   height: 40rpx; /* 背景的高 */
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   border: none;
   background:rgb(254,110,120);
}
.btn{
  width: 95%;
  margin: auto;
  margin-top: 50px;
}
.btn button{
 background:rgb(254,110,120);
 color: white;
}

/* 支付密码css start */
.bg_layer{
  position: fixed; left: 0; top: 0; bottom: 0; right: 0;
  background-color: rgba(0, 0, 0, 0.6); z-index: 9998;
}
.input_main{
   
    position: fixed; left: 5%; bottom: 500rpx; width: 90%; height: 450rpx;
    background-color: #fff; z-index: 9999;
}
.input_title{
    width: 100%; height: 90rpx; line-height: 90rpx; text-align: center; 
    font-size: 32rpx; border-bottom: 1rpx solid rgb(254,110,120);
}
.input_back{
    position: absolute; right: 0; top: 0;
    width: 80rpx; height: 90rpx; display: flex; justify-content: center; align-items: center;
}
.input_back text{
  width: 20rpx;
  height: 20rpx;
  background-color: white;
  border: 1rpx solid #aaa;
  border-width: 5rpx 0 0 5rpx;
  transform: rotate(-45deg);
}

.input_tip{width: 100%;  margin: 30rpx; font-size: 24rpx; color: #888; }

/* 密码掩码模拟 */
.input_row{
  width: 620rpx; margin: 0 auto; height: 98rpx; position: relative;
  display: flex; align-items: center; border: 1rpx solid #e2e2e2; border-radius: 20rpx;
}
.input_row .pwd_item{
  flex: 1; display: flex; align-items: center; justify-content: center; 
  height: 100%; border-right: 1rpx solid #e2e2e2; position: relative;
}
.pwd_item:nth-last-of-type(1) { border-right: 0; } 
.pwd_item text { 
  width: 30rpx; height: 30rpx; border-radius: 30rpx; background-color: #555;
}


.forget_pwd{ 
  float: right; margin: 30rpx; width: 100rpx; text-align: right; font-size: 24rpx; color: #ff7800;
}

/* 文本输入框位置: 设置到左边隐藏 */
.input_control { 
  position: relative; left: -300rpx; bottom: 0; width: 100rpx; height: 100rpx;
}
.money{
  width: 100%;
  text-align: center;
}
.number{
  width: 100%;
  text-align: center;
  font-size: 28px;
  color: #333;
}