page{
  border-top: 1px solid #ebebeb;
}
.inform{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.inform .inform_name{
  margin: 10px 0px;
  height: 60px;
}
.inform .inform_name .informname{
  width: 100%;
  height: 60px;
  background: white;
  padding-left: 15px;
  box-sizing: border-box;
  position: relative;
}
.inform .inform_name .informname .inform_font{
    line-height: 60px;
    font-size: 16px;
    color: #333;
}
.inform .inform_name .informname .inform_img{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 0px;
  padding-right: 30px;
  box-sizing: border-box;
}
.inform .inform_name .informname .inform_img .inform_img{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
}
.inform .inform_name .informname .inform_img image{
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.inform .inform_name .informname .inform_img .inform_you{
  width: 10px;
  height: 15px;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 10px;
}
.inform .inform_name .informname .inform_img .inform_you image{
  width: 10px;
  height: 15px;
  position: absolute;
  top: 0px;
  right: 0px;
}
/*用户名及修改内容*/
.inform .information_name{
  width:100%;
  background: white;
  padding-left: 15px;
  box-sizing: border-box;
}
.inform .information_name .inform_item{
  width: 100%;
  height: 60px;
  border-bottom: 1px solid #e6e6e6;
  position: relative;
}
.inform .information_name .inform_item:last-of-type{
  border: none;
}
.inform .information_name .inform_item .item_font{
  line-height: 60px;
  font-size: 16px;
  color: #333;
}
.inform .information_name .inform_item .item_new{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 0px;
  padding-right: 30px;
  box-sizing: border-box;
}
.inform .information_name .inform_item .item_new .new_font{
  color: #999;
  font-size: 15px;
}
.inform .information_name .inform_item .item_new .inform_you{
  width: 10px;
  height: 15px;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 10px;
}
.inform .information_name .inform_item .item_new .inform_you image{
  width: 10px;
  height: 15px;
  position: absolute;
  top: 0px;
  right: 0px;
}
.inform .information_name .inform_item:last-of-type .item_new{
  border: none;
  padding-right: 15px;
  box-sizing: border-box;
}

/*退出登录*/
.inform .Signout{
  width: 100%;
  height: 45px;
  position: fixed;
  bottom: 0px;
  left: 0px;
}
.inform .Signout .sign_out{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  background: white;
  color: #ff7f7f;
  border-top: 1px solid #ebebeb;
}
.mask{
width:100%;
height:100%;
position:fixed;
background-color:#999;
z-index:99;
top:0;
left:0;
opacity:0.5;
}
.select{
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 999;

}
.list{
  text-align: center;
  height: 40px;
  line-height: 40px;
  background-color: #fff;
}
.list:first-child{
  border-bottom: 1px solid#ddd;
}
.magin_top{
  margin-top: 5px;
}