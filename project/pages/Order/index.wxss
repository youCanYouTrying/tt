.filters {
	display: -webkit-flex;
  width: 100%;
  background: white;
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 1;
}
.filters .filter {
	-webkit-flex: 1;
  -ms-flex: 1;
	text-align: center;
	color: #4d4d4d;
	font-size: 30rpx;
	line-height: 3;
}
.filter.active {
	color: #fc656f;
}
/*订单*/
scroll-view{
  margin-top: 45px;
	color: #333333;
  background-color: #fff;
  margin-bottom:50rpx; 
}
.content{
  box-sizing: border-box;
  width: 100%;
  padding: 0rpx 10rpx 0rpx 10rpx;
}
.box{
  border-bottom: 1rpx solid #e5e5e5;
  padding-bottom: 30rpx;
  padding-top: 22rpx;
}
.box:last-child{
  border: none
}
.box-con{
  display: flex
}
.box-left{
  width: 105rpx;
  padding-left: 13rpx;
}
.box-img{
  width: 102rpx;
  height:102rpx;
}
.box-img image{
  width: 100%;
  height:100%;
}
.box-center{
  flex: 1;
  padding-left: 20rpx;
}
.box-title{
  width: 350rpx;
	font-size: 36rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.box-time{
  color: #666;
  font-size: 24rpx;
  margin-top: 10rpx;
  margin-bottom: 27rpx;
}
.box-text{
  font-size: 26rpx;
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.box-right{
  width: 150rpx;
  padding-right: 17rpx;
}
.box-status{
  width: 100%;
  height: 80rpx;
  font-size: 24rpx;
  color: #fc656f;
  margin-top:11rpx;
  text-align: right;
  overflow: hidden;
  word-break: break-all;
}
.box-money{
  text-align: right;
  font-size: 26rpx;
  font-weight: bold;
}
.box-btn{
  text-align: right;
  margin-right: 28rpx;
  margin-top: 27rpx;
}
.btn{
  display: inline-block;
  width: 130rpx;
  height: 50rpx;
  font-size: 26rpx;
  border: solid 2rpx #ff6969;
  border-radius: 4rpx;
  line-height: 50rpx;
  text-align: center;
}
.red-btn{
  background-color: #fc656f;
  color: #fff;
  margin-left: 18rpx;
}
.goLogin{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #f3f3f3;
  z-index: 99;
  left: 0;
  top: 0;
}
.login_btn{
  position: fixed;
  width: 100%;
  height: 100rpx;
  z-index: 999;
  left: 0;
  top: 0;
  margin-top: 30%;
}
.login_btn .title{
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.btn_center{
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin: auto;
  font-size: 28rpx;
  background-color: #ff6969;
}
.logo_img{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: auto;
  margin-bottom: 100rpx;
}