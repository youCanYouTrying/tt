/* 订单进程弹窗 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1;
  color: #fff;
}
.modal-dialog {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2;
  background: #f9f9f9;
}
.modal-title {
  height: 105rpx;
  font-size: 33rpx;
  color: #333;
  text-align: center;
  line-height: 105rpx;
  border: 2rpx solid #e5e5e5;
}
.modal-content {
  padding: 50rpx 32rpx;
   height:800rpx;
  /*overflow:scroll; */
  box-sizing: border-box;
}
.modal-item{
  display: flex;
  font-size: 26rpx;
  height: 100rpx;
  align-items: center;
}
.modal-iteml{
  flex: auto
}
.modal-itemr{
  flex: auto;
  text-align: right;
  margin-right: 30rpx;
  color: #999
}
.modal-footer {
  height: 110rpx;
  font-size: 34rpx;
  background-color: #fe6e78;
  line-height: 110rpx;
  text-align: center;
  color: #fff;
}
.time-line{
  width: 50rpx;
  display: inline-block;
  line-height:100rpx;
}
.clr{
  background: #c9c9c9;
  height: 13rpx;
  width: 13rpx;
  border-radius: 6rpx;
  vertical-align: middle;
  margin-left: 7rpx;
  position: relative
}
.clr::before{
  content: "";
  position: absolute;
  height: 100rpx;
  width: 3rpx;
  background-color: #c9c9c9;
  top: 6rpx;
  left: 6rpx;
  z-index: -1
}
.clr1{
  width: 27rpx;
	height: 27rpx;
	background-color: #fe6e78;
  border-radius: 13rpx;
  vertical-align: middle;
  position: relative;
  z-index: -1
}
.clr1::before{
  content: "";
  position: absolute;
  width: 14rpx;
	height: 14rpx;
	background-color: #fff;
  border-radius: 50%;
  z-index: 1;
  transform: translate(50%,50%)
}

