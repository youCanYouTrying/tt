.container{
  width: 100%;
  height:100%;
  font-size: 24rpx;
}
.item{
  margin-top: 30rpx;
}
.header{
  font-size: 28rpx;
  text-align: center;
  position: relative
}
.header::after{
  content: '';
  width: 100%;
  position: absolute;
  border-bottom: 1rpx solid #ccc;
  left: 0;
  top:calc(50% - 1rpx);
  z-index: -1
}
.header text{
  display: inline-block;
  position: relative;
  background-color: #f5f5f5;
  width: 200rpx;
}
.box{
  margin:20rpx;
  position: relative;
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
  align-items: center;
}
.back-img{
  position: absolute;
  height: 200rpx;
  width: 100%;
  z-index: -1;
  left: 0rpx;
  top:0rpx;
}
.back-img image{
  width: 100%;
  height: 100%;
}
.left{
 width: 157rpx;
}
.img{
  width: 126rpx;
  height: 126rpx;
}
.img image{
  width: 100%;
  height: 100%;
}
.center{
  flex: 1;
  padding-right: 86rpx;
  margin-left: 20rpx;
  border-right: 2rpx solid #dbdbdb;
}
.title{
  font-size:30rpx; 
  width: 250rpx; 
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.btn{
  height: 38rpx;
  width: 77rpx;
	border: solid 1rpx #fe6161;
  color: #fe6161;  
  text-align: center;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
}
.time{
  color: #666;
}
.right{
  width:200rpx;
}
.money{
  color: #fd6767;
  font-size: 40rpx;
  text-align: center
}
.money text{
  font-size: 60rpx;
}
.text{
  text-align: center;
  margin-top:17rpx;
  font-size: 24rpx;
  color: #666666;
}